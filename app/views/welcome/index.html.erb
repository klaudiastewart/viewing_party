<section class='login_page'>
  <h1 class='welcome'>Welcome to Viewing Party</h1>
  <div id='login'>
    <h2>At Viewing Party, we make it easy to watch a movie with friends from the world.<br/>Let's get started!</h2>
    <div id='login_form' class='login-form'>
    <%= form_with url: "/", method: :post, local: true do |form|%>
      <%= form.label :email, 'Email:' %>
      <%= form.text_field :email %>

      <%= form.label :password, 'Password:' %>
      <%= form.password_field :password %>
      <div id="login-button"><%= form.submit 'Log In' %></div>
    <% end %><br>

    <%= link_to "New to Viewing Party? Register Here", "/register" %>
    </div>
  </div>
</section>
